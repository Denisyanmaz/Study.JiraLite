@page "{id:guid}"
@model DenoLite.Web.Pages.Projects.DetailsModel

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <div class="text-muted small">
            <a href="/Projects">Projects</a> / Details
        </div>
        <h2 class="mb-0" style="white-space:pre-wrap; word-wrap:break-word; overflow-wrap:break-word;">@Model.ProjectName</h2>
    </div>

    <div>
        <a class="btn btn-outline-secondary btn-sm" href="/Projects">Back</a>
        @* Removed duplicate Logout button (navbar/top-right logout stays) *@
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger" style="white-space:pre-wrap;">@Model.Error</div>
}
else
{
    <!-- Tabs -->
    <div class="d-flex justify-content-between align-items-center mb-3">

        <!-- Tabs -->
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link @(Model.Tab == "board" ? "active" : "")"
                   href="/Projects/Details/@Model.ProjectId?tab=board">
                    Board
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link @(Model.Tab == "activity" ? "active" : "")"
                   href="/Projects/Details/@Model.ProjectId?tab=activity">
                    Activity
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link @(Model.Tab == "members" ? "active" : "")"
                   href="/Projects/Details/@Model.ProjectId?tab=members">
                    Members
                </a>
            </li>
        </ul>

        <!-- Create Task Button (only on Board tab) -->
        @if (Model.Tab == "board")
        {
            <button type="button"
                    id="createTaskModalTrigger"
                    class="btn btn-success"
                    data-bs-toggle="modal"
                    data-bs-target="#createTaskModal">
                + Create Task
            </button>
        }

    </div>


    @* ===================== BOARD TAB ===================== *@
    @if (Model.Tab == "board")
    {
        <!-- Filters -->
        <div class="card mb-3">
            <div class="card-body">
                <form method="get" class="row g-2 align-items-end">
                    <input type="hidden" name="tab" value="board" />

                    <div class="col-md-2">
                        <label class="form-label">Status</label>
                        <select class="form-select" name="status">
                            <option value="">All</option>
                            <option value="Todo" selected="@(Model.Status?.ToString() == "Todo")">Todo</option>
                            <option value="InProgress" selected="@(Model.Status?.ToString() == "InProgress")">InProgress</option>
                            <option value="Done" selected="@(Model.Status?.ToString() == "Done")">Done</option>
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Priority</label>
                        <select class="form-select" name="priority">
                            <option value="">All</option>
                            @for (int p = 1; p <= 5; p++)
                            {
                                var label = p switch
                                {
                                    1 => "1 (High)",
                                    2 => "2 (Med-High)",
                                    3 => "3 (Medium)",
                                    4 => "4 (Med-Low)",
                                    5 => "5 (Low)",
                                    _ => p.ToString()
                                };

                                <option value="@p" selected="@(Model.Priority == p)">@label</option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Assignee</label>
                        <select class="form-select" name="assigneeId">
                            <option value="">All</option>
                            @foreach (var item in Model.AssigneeSelectItems)
                            {
                                <option value="@item.Value"
                                        selected="@(Model.AssigneeId?.ToString() == item.Value)">
                                    @item.Text
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Due From</label>
                        <input class="form-control" type="date" name="dueFrom" value="@(Model.DueFrom?.ToString("yyyy-MM-dd") ?? "")" />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Due To</label>
                        <input class="form-control" type="date" name="dueTo" value="@(Model.DueTo?.ToString("yyyy-MM-dd") ?? "")" />
                    </div>

                    <div class="col-md-1">
                        <label class="form-label">Size</label>
                        <select class="form-select" name="pageSize">
                            @foreach (var size in new[] { 10, 15, 20, 50 })
                            {
                                <option value="@size" selected="@(Model.PageSize == size)">@size</option>
                            }
                        </select>
                    </div>

                    <div class="col-12 d-flex gap-2 mt-2">
                        <button class="btn btn-primary" type="submit">Apply</button>
                        <a class="btn btn-outline-secondary" href="/Projects/Details/@Model.ProjectId?tab=board">Reset</a>
                    </div>
                </form>
            </div>
        </div>

        <!-- Create Task Modal -->
        <div class="modal fade" id="createTaskModal" tabindex="-1"
             aria-labelledby="createTaskModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl create-task-modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createTaskModalLabel">Create Task</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body create-task-modal-body">
                        @* If create failed, show error *@
                        @if (!string.IsNullOrWhiteSpace(Model.CreateError))
                        {
                            <div class="alert alert-danger" style="white-space:pre-wrap;">
                                @Model.CreateError
                            </div>
                        }

                        <form method="post" asp-page-handler="CreateTask" class="row g-2" id="createTaskForm">
                            <input type="hidden" name="tab" value="board" />

                            <div class="col-md-6">
                                <label class="form-label">Title</label>
                                <input class="form-control" asp-for="CreateTaskInput.Title" />
                                <span class="text-danger" asp-validation-for="CreateTaskInput.Title"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Assignee</label>
                                <select class="form-select" asp-for="CreateTaskInput.AssigneeId" asp-items="Model.AssigneeSelectItems">
                                    <option value="">-- select a member --</option>
                                </select>
                                <span class="text-danger" asp-validation-for="CreateTaskInput.AssigneeId"></span>
                            </div>

                            <div class="col-12 create-task-description-col">
                                <label class="form-label">Description</label>
                                <input type="hidden" asp-for="CreateTaskInput.Description" id="createTaskDescriptionValue" />
                                <div id="createTaskDescriptionEditor" class="border rounded bg-white create-task-description-editor" style="height: 150px; overflow-y: auto; cursor: text;"></div>
                                <div id="createTaskDescriptionFallbackWrap" class="d-none">
                                    <div class="btn-toolbar mb-1 border rounded p-1 bg-light" role="toolbar">
                                        <button type="button" class="btn btn-sm btn-outline-secondary" title="Bold" data-cmd="bold">B</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary" title="Italic" data-cmd="italic">I</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary" title="Underline" data-cmd="underline">U</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary" title="Bullet list" data-cmd="insertUnorderedList">•</button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary" title="Numbered list" data-cmd="insertOrderedList">1.</button>
                                    </div>
                                    <div id="createTaskDescriptionFallback" class="form-control border rounded" contenteditable="true" style="min-height: 120px; max-height: 200px; overflow-y: auto;" data-placeholder="Describe the task…"></div>
                            <div class="col-12 pt-2 mt-2 create-task-separator">
                            </div>

                                </div>
                                <span class="text-danger" asp-validation-for="CreateTaskInput.Description"></span>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Status</label>
                                <select class="form-select" asp-for="CreateTaskInput.Status">
                                    <option value="Todo">Todo</option>
                                    <option value="InProgress">InProgress</option>
                                    <option value="Done">Done</option>
                                </select>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Priority</label>
                                <select class="form-select" asp-for="CreateTaskInput.Priority">
                                    @for (var p = 1; p <= 5; p++)
                                    {
                                        <option value="@p">@p</option>
                                    }
                                </select>
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Due Date</label>
                                <input class="form-control" type="date" asp-for="CreateTaskInput.DueDate" />
                            </div>

                            <div class="col-12 d-flex justify-content-end gap-2 mt-2">
                                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                                    Cancel
                                </button>
                                <button class="btn btn-success" type="submit">
                                    Create
                                </button>
                            </div>
                        </form>

                    </div>

                </div>
            </div>
        </div>


        <!-- Board -->
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <strong>Board</strong>
                <span>Total: @Model.TotalCount</span>
            </div>

            <div class="card-body">
                <div id="boardToast" class="alert alert-danger d-none"></div>

                <div class="row g-3">
                    @Model.RenderColumn("Todo", Model.TodoTasks)
                    @Model.RenderColumn("InProgress", Model.InProgressTasks)
                    @Model.RenderColumn("Done", Model.DoneTasks)
                </div>
            </div>

            <!-- Paging (board only) -->
            <div class="card-footer d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Page @Model.PageNumber of @Model.TotalPages
                </div>

                <div class="d-flex gap-2">
                    @if (Model.PageNumber > 1)
                    {
                        <a class="btn btn-outline-secondary btn-sm" href="@Model.BoardPageLink(Model.PageNumber - 1)">Prev</a>
                    }
                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <a class="btn btn-outline-secondary btn-sm" href="@Model.BoardPageLink(Model.PageNumber + 1)">Next</a>
                    }
                </div>
            </div>
        </div>
    }

    @* ===================== ACTIVITY TAB ===================== *@
    @if (Model.Tab == "activity")
    {
        <div class="card mb-3">
            <div class="card-header"><strong>Project Activity</strong></div>
            <div class="card-body">

                <form method="get" class="row g-2 align-items-end mb-3">
                    <input type="hidden" name="tab" value="activity" />

                    <div class="col-md-3">
                        <label class="form-label">ActionType</label>
                        <select class="form-select" name="actionType">
                            <option value="">All</option>
                            <option value="TaskCreated" selected="@(Model.ActivityActionType == "TaskCreated")">TaskCreated</option>
                            <option value="TaskUpdated" selected="@(Model.ActivityActionType == "TaskUpdated")">TaskUpdated</option>
                            <option value="TaskDeleted" selected="@(Model.ActivityActionType == "TaskDeleted")">TaskDeleted</option>
                            <option value="TaskStatusChanged" selected="@(Model.ActivityActionType == "TaskStatusChanged")">TaskStatusChanged</option>
                            <option value="CommentAdded" selected="@(Model.ActivityActionType == "CommentAdded")">CommentAdded</option>
                            <option value="MemberAdded" selected="@(Model.ActivityActionType == "MemberAdded")">MemberAdded</option>
                            <option value="MemberRemoved" selected="@(Model.ActivityActionType == "MemberRemoved")">MemberRemoved</option>
                            <option value="MemberLeft" selected="@(Model.ActivityActionType == "MemberLeft")">MemberLeft</option>
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Actor</label>
                        <select class="form-select" name="actorId">
                            <option value="">All</option>
                            @foreach (var item in Model.AssigneeSelectItems)
                            {
                                <option value="@item.Value"
                                        selected="@(Model.ActivityActorId?.ToString() == item.Value)">
                                    @item.Text
                                </option>
                            }
                        </select>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">TaskId</label>
                        <input class="form-control" name="taskId" value="@(Model.ActivityTaskId?.ToString() ?? "")"
                               placeholder="Taskid (optional)" />
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Search (q)</label>
                        <input class="form-control" name="q" value="@(Model.ActivityQ ?? "")"
                               placeholder="search message..." />
                    </div>

                    <div class="col-md-2">
                        <label class="form-label">Size</label>
                        <select class="form-select" name="aSize">
                            @foreach (var size in new[] { 20, 50, 100 })
                            {
                                <option value="@size" selected="@(Model.ActivityPageSize == size)">@size</option>
                            }
                        </select>
                    </div>

                    <div class="col-12 d-flex gap-2">
                        <button class="btn btn-primary" type="submit">Apply</button>
                        <a class="btn btn-outline-secondary" href="/Projects/Details/@Model.ProjectId?tab=activity">Reset</a>
                    </div>
                </form>

                @if (Model.ProjectActivity?.Items == null || Model.ProjectActivity.Items.Count == 0)
                {
                    <div class="text-muted">No activity yet.</div>
                }
                else
                {
                    @foreach (var a in Model.ProjectActivity.Items)
                    {
                        <div class="border rounded p-2 mb-2">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <span class="badge bg-secondary">@a.ActionType</span>
                                    <span class="text-muted small">by <code>@(Model.AssigneeEmailById.TryGetValue(a.ActorId, out var actorEmail) && !string.IsNullOrWhiteSpace(actorEmail) ? actorEmail : a.ActorId.ToString())</code></span>

                                    @if (a.TaskId.HasValue)
                                    {
                                        <span class="text-muted small">
                                            • task <a href="/Tasks/Details/@a.TaskId.Value?tab=overview">
                                                @if (!string.IsNullOrWhiteSpace(a.TaskTitle))
                                                {
                                                    <strong>@a.TaskTitle</strong>
                                                }
                                                else
                                                {
                                                    <code>@a.TaskId.Value</code>
                                                }
                                            </a>
                                        </span>
                                    }
                                </div>
                                <div class="text-muted small">@a.CreatedAt.ToString("yyyy-MM-dd HH:mm")</div>
                            </div>
                            <div class="mt-2">@Model.CleanActivityMessage(a.Message, a.ActionType)</div>
                        </div>
                    }
                }
            </div>
        </div>
    }

    @* ===================== MEMBERS TAB ===================== *@

    @if (string.Equals(Model.Tab, "members", StringComparison.OrdinalIgnoreCase))
    {
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <strong>Members</strong>
                <span class="text-muted small">Total: @Model.Members.Count</span>
            </div>

            <div class="card-body">
                @if (!string.IsNullOrWhiteSpace(Model.MembersError))
                {
                    <div class="alert alert-danger" style="white-space:pre-wrap;">@Model.MembersError</div>
                }

                @* ✅ Only owners see Add Member UI *@
                @if (string.Equals(Model.CurrentUserRole, "Owner", StringComparison.OrdinalIgnoreCase))
                {
                    <div class="border rounded p-3 mb-3 bg-light">
                        <div class="fw-semibold mb-2">Add Member</div>

                        <form method="post" asp-page-handler="AddMember" asp-route-id="@Model.ProjectId" class="row g-2">
                            <input type="hidden" name="tab" value="members" />

                            <div class="col-md-8">
                                <label class="form-label">User Email</label>
                                <input class="form-control" asp-for="AddMemberInput.Email" />
                                <span asp-validation-for="AddMemberInput.Email" class="text-danger"></span>
                            </div>

                            <div class="col-md-2 d-flex align-items-end">
                                <button class="btn btn-primary w-100" type="submit">Add</button>
                            </div>
                        </form>
                    </div>
                }

                @{
                    var activeMembers = Model.Members.Where(m => !m.IsRemoved).ToList();
                    var removedMembers = Model.Members.Where(m => m.IsRemoved).ToList();
                }

                @if (activeMembers.Count == 0 && removedMembers.Count == 0)
                {
                    <div class="text-muted">No members found.</div>
                }
                else
                {
                    @* Active Members *@
                    @if (activeMembers.Count > 0)
                    {
                        <div class="table-responsive mb-4">
                            <table class="table table-sm align-middle">
                                <thead>
                                    <tr>
                                        <th>Member</th>
                                        <th>Role</th>
                                        <th style="width: 160px;"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var m in activeMembers)
                                    {
                                        var isOwner = string.Equals(Model.CurrentUserRole, "Owner", StringComparison.OrdinalIgnoreCase);
                                        var isSelf = Model.CurrentUserId != Guid.Empty && m.UserId == Model.CurrentUserId;
                                        var targetIsOwner = string.Equals(m.Role, "Owner", StringComparison.OrdinalIgnoreCase);

                                        var canOwnerRemove = isOwner && !targetIsOwner;
                                        var canMemberLeave = !isOwner && isSelf;

                                        var showButton = canOwnerRemove || canMemberLeave;
                                        var buttonText = canMemberLeave ? "Leave" : "Remove";
                                        var confirmText = canMemberLeave ? "Leave this project?" : "Remove this member?";

                                        <tr>
                                            <td>@(m.Email ?? m.UserId.ToString())</td>
                                            <td>
                                                <span class="badge @(m.Role == "Owner" ? "bg-dark" : "bg-secondary")">@m.Role</span>
                                            </td>
                                            <td class="text-end">
                                                @if (showButton)
                                                {
                                                    <form method="post" asp-page-handler="RemoveMember" class="d-inline">
                                                        <input type="hidden" name="tab" value="members" />
                                                        <input type="hidden" name="memberUserId" value="@m.UserId" />
                                                        <button class="btn btn-outline-danger btn-sm"
                                                                type="submit"
                                                                onclick="return confirm('@confirmText');">
                                                            @buttonText
                                                        </button>
                                                    </form>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }

                    @* Removed Members (only visible to owners) *@
                    @if (removedMembers.Count > 0 && string.Equals(Model.CurrentUserRole, "Owner", StringComparison.OrdinalIgnoreCase))
                    {
                        <div class="mt-4">
                            <h6 class="text-muted mb-2">Former Members</h6>
                            <div class="table-responsive">
                                <table class="table table-sm align-middle">
                                    <thead>
                                        <tr>
                                            <th>Member</th>
                                            <th>User ID</th>
                                            <th>Role</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var m in removedMembers)
                                        {
                                            <tr class="text-muted" style="opacity: 0.6;">
                                                <td>@(m.Email ?? "N/A")</td>
                                                <td><code class="small">@m.UserId</code></td>
                                                <td>
                                                    <span class="badge bg-secondary">@m.Role</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    }
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/quill@2/dist/quill.snow.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/quill@2/dist/quill.js"></script>
    <script>
        (function () {
            // Members of this project for mention suggestions in the create-task modal
            window.denoLiteProjectMentionMembers = @Html.Raw(
                System.Text.Json.JsonSerializer.Serialize(
                    Model.AssigneeEmailById
                        .Where(kvp => !string.IsNullOrWhiteSpace(kvp.Value))
                        .Select(kvp => new {
                            id = kvp.Key,
                            email = kvp.Value!,
                            handle = kvp.Value!.Contains("@")
                                ? kvp.Value!.Substring(0, kvp.Value!.IndexOf("@"))
                                : kvp.Value!
                        })
                )
            );

            function initMentionSupport(quill, members, editorElement) {
                if (!quill || !editorElement || !Array.isArray(members) || members.length === 0) return;

                const container = editorElement.parentElement || editorElement;
                if (!container) return;
                if (!container.style.position) {
                    container.style.position = "relative";
                }

                const menu = document.createElement("div");
                menu.className = "mention-suggestions list-group position-absolute bg-white border rounded shadow-sm";
                menu.style.zIndex = "2000";
                menu.style.display = "none";
                menu.style.minWidth = "180px";
                container.appendChild(menu);

                let mentionStartIndex = null;

                function closeMenu() {
                    menu.style.display = "none";
                    menu.innerHTML = "";
                    mentionStartIndex = null;
                }

                function openMenu(bounds) {
                    menu.innerHTML = "";
                    members.forEach(m => {
                        const item = document.createElement("button");
                        item.type = "button";
                        item.className = "list-group-item list-group-item-action py-1 px-2";
                        const handleText = (m.handle || "");
                        item.textContent = handleText;
                        item.addEventListener("click", (ev) => {
                            ev.preventDefault();
                            ev.stopPropagation();
                            applyMention(m.handle);
                        });
                        menu.appendChild(item);
                    });

                    menu.style.left = (bounds.left || 0) + "px";
                    menu.style.top = ((bounds.bottom || bounds.top || 0) + 4) + "px";
                    menu.style.display = "block";
                }

                function applyMention(handle) {
                    if (!handle) {
                        closeMenu();
                        return;
                    }
                    const sel = quill.getSelection(true);
                    if (!sel) {
                        closeMenu();
                        return;
                    }
                    let index = sel.index;
                    if (index > 0) {
                        const prev = quill.getText(index - 1, 1);
                        const prevCode = prev && prev.length ? prev.charCodeAt(0) : 0;
                        if (prevCode === 64) {
                            quill.deleteText(index - 1, 1, "user");
                            index = index - 1;
                        }
                    }
                    const atSign = String.fromCharCode(64);
                    quill.insertText(index, atSign + handle, { bold: true }, "user");
                    quill.insertText(index + handle.length + 1, " ", "user");
                    quill.setSelection(index + handle.length + 2, 0, "user");
                    closeMenu();
                }

                quill.on("text-change", function (_, __, source) {
                    if (source !== "user") return;
                    const sel = quill.getSelection();
                    if (!sel) {
                        closeMenu();
                        return;
                    }
                    const index = sel.index;
                    if (index <= 0) {
                        closeMenu();
                        return;
                    }

                    const ch = quill.getText(index - 1, 1);
                    const code = ch && ch.length ? ch.charCodeAt(0) : 0;
                    if (code !== 64) {
                        if (menu.style.display !== "none") {
                            closeMenu();
                        }
                        return;
                    }

                    mentionStartIndex = index - 1;
                    const bounds = quill.getBounds(index);
                    openMenu(bounds);
                });

                quill.root.addEventListener("blur", () => {
                    setTimeout(closeMenu, 150);
                });
            }

            let createTaskQuill = null;
            let fallbackToolbarInited = false;
            const modalEl = document.getElementById("createTaskModal");
            const editorEl = document.getElementById("createTaskDescriptionEditor");
            const hiddenInput = document.getElementById("createTaskDescriptionValue");
            const fallbackWrap = document.getElementById("createTaskDescriptionFallbackWrap");
            const fallbackEd = document.getElementById("createTaskDescriptionFallback");
            const form = document.getElementById("createTaskForm");

            function useFallbackEditor() {
                if (!editorEl || !hiddenInput) return;
                editorEl.classList.add("d-none");
                if (fallbackWrap) fallbackWrap.classList.remove("d-none");
                if (fallbackEd) {
                    fallbackEd.innerHTML = hiddenInput.value || "";
                    fallbackEd.setAttribute("data-placeholder", "Describe the task…");
                }
            }

            function initFallbackToolbar() {
                if (!fallbackEd || fallbackToolbarInited) return;
                fallbackToolbarInited = true;

                function updateFallbackToolbarState() {
                    if (!fallbackWrap) return;
                    const cmdList = ["bold", "italic", "underline", "insertUnorderedList", "insertOrderedList"];
                    cmdList.forEach(function (cmd) {
                        const btn = fallbackWrap.querySelector('[data-cmd="' + cmd + '"]');
                        if (!btn) return;
                        let active = false;
                        try {
                            active = document.queryCommandState(cmd);
                        } catch {
                            active = false;
                        }
                        if (active) {
                            btn.classList.add("btn-secondary", "text-white");
                            btn.classList.remove("btn-outline-secondary");
                        } else {
                            btn.classList.remove("btn-secondary", "text-white");
                            btn.classList.add("btn-outline-secondary");
                        }
                    });
                }

                fallbackWrap?.querySelectorAll("[data-cmd]").forEach(function (btn) {
                    btn.addEventListener("click", function () {
                        fallbackEd.focus();
                        document.execCommand(btn.getAttribute("data-cmd"), false, null);
                        fallbackEd.dispatchEvent(new Event("input", { bubbles: true }));
                        updateFallbackToolbarState();
                    });
                });

                fallbackEd.addEventListener("keyup", updateFallbackToolbarState);
                fallbackEd.addEventListener("mouseup", updateFallbackToolbarState);

                fallbackEd.addEventListener("input", function () {
                    if (hiddenInput) hiddenInput.value = fallbackEd.innerHTML;
                });
                fallbackEd.addEventListener("blur", function () {
                    if (hiddenInput) hiddenInput.value = fallbackEd.innerHTML;
                });

                // Initialize button states based on initial selection/content
                updateFallbackToolbarState();
            }

            function initCreateTaskQuill() {
                if (createTaskQuill) return;
                if (!editorEl || !hiddenInput) return;
                if (typeof Quill === "undefined") {
                    useFallbackEditor();
                    initFallbackToolbar();
                    return;
                }
                try {
                    createTaskQuill = new Quill(editorEl, {
                        theme: "snow",
                        placeholder: "Describe the task…",
                        modules: {
                            toolbar: [
                                ["bold", "italic", "underline", "strike"],
                                [{ list: "ordered" }, { list: "bullet" }],
                                ["link"],
                                ["clean"]
                            ]
                        }
                    });
                    if (hiddenInput.value) {
                        try {
                            createTaskQuill.root.innerHTML = hiddenInput.value;
                        } catch (_) {
                            createTaskQuill.setText(hiddenInput.value);
                        }
                    }
                    createTaskQuill.on("text-change", function () {
                        hiddenInput.value = createTaskQuill.root.innerHTML;
                    });
                    if (fallbackWrap) fallbackWrap.classList.add("d-none");

                    if (window.denoLiteProjectMentionMembers) {
                        initMentionSupport(createTaskQuill, window.denoLiteProjectMentionMembers, editorEl);
                    }
                } catch (e) {
                    useFallbackEditor();
                    initFallbackToolbar();
                }
            }

            function moveFocusToCreateTaskTrigger() {
                var trigger = document.getElementById("createTaskModalTrigger");
                if (trigger && typeof trigger.focus === "function") {
                    trigger.focus({ preventScroll: true });
                }
            }

            modalEl?.addEventListener("hide.bs.modal", function () {
                if (document.activeElement && modalEl.contains(document.activeElement)) {
                    document.activeElement.blur();
                }
                moveFocusToCreateTaskTrigger();
            });

            modalEl?.addEventListener("click", function (e) {
                if (e.target.closest("[data-bs-dismiss=\"modal\"]") || e.target.closest(".btn-close")) {
                    moveFocusToCreateTaskTrigger();
                }
            }, true);

            document.addEventListener("mousedown", function (e) {
                if (e.target.classList.contains("modal-backdrop") && modalEl && modalEl.classList.contains("show")) {
                    moveFocusToCreateTaskTrigger();
                }
            }, true);

            modalEl?.addEventListener("shown.bs.modal", function () {
                setTimeout(function () {
                    initCreateTaskQuill();
                    if (hiddenInput && createTaskQuill) {
                        try {
                            createTaskQuill.root.innerHTML = hiddenInput.value || "";
                        } catch (_) {
                            createTaskQuill.setText(hiddenInput.value || "");
                        }
                        createTaskQuill.focus();
                    }
                    if (fallbackWrap && !createTaskQuill && !fallbackWrap.classList.contains("d-none")) {
                        fallbackEd?.focus();
                    }
                }, 150);
            });

            form?.addEventListener("submit", function () {
                if (hiddenInput) {
                    if (createTaskQuill) {
                        hiddenInput.value = createTaskQuill.root.innerHTML;
                    } else if (fallbackEd) {
                        hiddenInput.value = fallbackEd.innerHTML || "";
                    }
                }
            });
        })();
    </script>
    @if (!string.IsNullOrWhiteSpace(Model.CreateError))
    {
        <script>
            (function () {
                const el = document.getElementById("createTaskModal");
                if (!el) return;
                const modal = new bootstrap.Modal(el);
                modal.show();
            })();
        </script>
    }


    @if (Model.Tab == "board")
    {
        <script>
            (function () {
                const cards = document.querySelectorAll(".task-link");
                const columns = document.querySelectorAll(".board-column");
                const toast = document.getElementById("boardToast");

                let dragTaskId = null;
                let dragFromStatus = null;
                let wasDragging = false;

                function showError(msg) {
                    toast.textContent = msg;
                    toast.classList.remove("d-none");
                    setTimeout(() => toast.classList.add("d-none"), 4000);
                }

                // Quick status dropdown
                document.querySelectorAll(".quick-status").forEach(sel => {
                  sel.addEventListener("change", async (e) => {
                    const taskId = sel.dataset.taskId;
                    const targetStatus = sel.value;

                    const resp = await fetch("/Projects/UpdateTaskStatus", {
                      method: "POST",
                      headers: { "Content-Type": "application/json" },
                      body: JSON.stringify({
                        taskId: taskId,
                        status: targetStatus,
                        projectId: "@Model.ProjectId"
                      })
                    });

                    if (!resp.ok) {
                      const text = await resp.text();
                      showError(text || "Status update failed.");
                      return;
                    }

                    location.reload();
                  });
                });

                cards.forEach(card => {
                    card.addEventListener("dragstart", e => {
                        wasDragging = true;
                        dragTaskId = card.dataset.taskId;
                        dragFromStatus = card.dataset.status;
                        e.dataTransfer.setData("text/plain", dragTaskId);
                    });

                    card.addEventListener("dragend", () => {
                        setTimeout(() => wasDragging = false, 0);
                    });

                    card.addEventListener("click", e => {
                      if (e.target.closest(".quick-status")) {
                        e.preventDefault();
                        e.stopPropagation();
                        return;
                      }
                      if (wasDragging) e.preventDefault();
                    });
                });

                columns.forEach(col => {
                    col.addEventListener("dragover", e => e.preventDefault());

                    col.addEventListener("drop", async e => {
                        e.preventDefault();

                        const targetStatus = col.dataset.dropStatus;
                        const taskId = dragTaskId || e.dataTransfer.getData("text/plain");

                        if (!taskId || dragFromStatus === targetStatus) return;

                        const resp = await fetch("/Projects/UpdateTaskStatus", {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({
                                taskId: taskId,
                                status: targetStatus,
                                projectId: "@Model.ProjectId"
                            })
                        });

                        if (!resp.ok) {
                            const text = await resp.text();
                            showError(text);
                            return;
                        }

                        location.reload();
                    });
                });
            })();
        </script>
    }

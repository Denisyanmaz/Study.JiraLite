@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
    var isLoggedIn = User?.Identity?.IsAuthenticated == true;
}
<div class="home-bg">
    <div class="container py-5 text-white">
        <h1 class="mb-2">DenoLite</h1>
        <p class="text-white">A lightweight Deno-style task tracker.</p>

        @if (!isLoggedIn)
        {
            <div class="d-flex gap-2 mt-3">
                <a class="btn btn-outline-warning" href="/Login">Login</a>
                <a class="btn btn-outline-success" href="/Register">Register</a>
            </div>

            <div class="text-white mt-3">
                Login to view and manage your projects.
            </div>
        }
        else
        {
            <div class="d-flex gap-2 mt-3">
                <a class="btn btn-outline-warning" href="/Projects">My Projects</a>
                <a class="btn btn-outline-danger" href="/Logout">Logout</a>
            </div>
        }
    </div>
</div>

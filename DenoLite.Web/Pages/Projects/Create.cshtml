@page
@model DenoLite.Web.Pages.Projects.CreateModel

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Create Project</h2>
    <a class="btn btn-outline-secondary btn-sm" href="/Projects">Back</a>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger" role="alert">@Model.Error</div>
}

<form method="post">
    <div style="margin-top:10px">
        <label>Name</label><br />
        <input asp-for="Input.Name" />
        <span asp-validation-for="Input.Name" style="color:red"></span>
    </div>

    <div style="margin-top:10px">
        <label>Description</label><br />
        <textarea asp-for="Input.Description" rows="4" cols="60"></textarea>
        <span asp-validation-for="Input.Description" style="color:red"></span>
    </div>

    <div style="margin-top:15px">
        <button type="submit">Create</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model DenoLite.Web.Pages.Projects.IndexModel

<style>
    .project-link:hover .project-card {
        transform: translateY(-2px);
        box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.1) !important;
    }
    /* Every card matches the height of the tallest card in its row (the "full" card) */
    .projects-grid .col-project {
        display: flex;
    }
    .projects-grid .project-link {
        display: flex;
        flex: 1;
        min-width: 0;
    }
    .projects-grid .project-card {
        flex: 1;
        display: flex;
        flex-direction: column;
    }
    .projects-grid .project-card .card-body {
        flex: 1;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">My Projects</h2>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
    <div class="alert alert-danger" style="white-space:pre-wrap;">@Model.Error</div>
}

@if (Model.Projects.Count == 0 && string.IsNullOrWhiteSpace(Model.Error))
{
    <p class="text-muted">No projects yet.</p>
}
else if (Model.Projects.Count > 0)
{
    <div class="row g-2 projects-grid">
        @foreach (var p in Model.Projects)
        {
            <div class="col-sm-6 col-lg-6 col-project">
                <a href="/Projects/Details/@p.Id" class="text-decoration-none text-dark project-link">
                    <div class="card shadow-sm border project-card h-100" style="transition: transform 0.2s, box-shadow 0.2s;">
                        <div class="card-body text-center" style="padding: 1rem;">
                            <h5 class="card-title" style="word-wrap:break-word; overflow-wrap:break-word; line-height:1.3; margin:0 0 0.5rem 0;">
                                @p.Name
                            </h5>
                            <p class="card-text text-muted small mb-0" style="word-wrap:break-word; overflow-wrap:break-word; line-height:1.4;">
                                @(string.IsNullOrWhiteSpace(p.Description) ? "No description" : p.Description)
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}

@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
    var isLoggedIn = User?.Identity?.IsAuthenticated == true;
}

<div class="container py-5">
    <h1 class="mb-2">JiraLite</h1>
    <p class="text-muted">A lightweight Jira-style task tracker.</p>

    @if (!isLoggedIn)
    {
        <div class="d-flex gap-2 mt-3">
            <a class="btn btn-primary" href="/Login">Login</a>
            <a class="btn btn-outline-secondary" href="/Register">Register</a>
        </div>

        <div class="text-muted mt-3">
            Login to view and manage your projects.
        </div>
    }
    else
    {
        <div class="d-flex gap-2 mt-3">
            <a class="btn btn-primary" href="/Projects">My Projects</a>
            <a class="btn btn-outline-danger" href="/Logout">Logout</a>
        </div>
    }
</div>
